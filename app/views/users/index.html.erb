<div class="users-index">
  <div class="row">
    <div class="col-sm-12">
      <div class="user-actions text-center">
        <%= link_to 'I would like to buy', contracts_path, class: 'btn btn-lg btn-primary' %>
        <span>or</span>
        <%= link_to 'I would like to sell', new_contract_path, class: 'btn btn-lg btn-primary' %>
      </div>

      <% if current_user.have_offers? %>
        <div class="offers">
          <h1>Offers</h1>

          <% Contract.where(seller_id: current_user).each do |c| %>
            <% if c.listed? || c.pending? %>
            Contract #<%= c.id %>
            <ul>
              <% c.bids.each do |b| %>
                <li>Offer from <%= User.find(b.bidder_id).fullname %> <%= link_to 'Accept', accept_path(b) %></li>
              <% end %>
            </ul>
          <% end %>
        <% end %>
  </div>
</div>

