<% content_for :body_class, "landing" %>

<div class="landing">
  <div class="container">
    <div class="navbar">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span>MENU</span>
        </button>
        <%= link_to 'Options', root_path, class: 'navbar-brand'%>
      </div>
   </div>
 </div>
 <div class="landing one-page">
  <div class="content">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12">
          <h2 class="text-xs-center">Easily invest in options with confidence!</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <p class="lead text-xs-center">Tired of investing carelessly? Invest with confidence with Options!</p>
        </div>
      </div>
      <div class="row mt20">
        <div class="col-xs-12">
          <form class="signup-form form-inline">
            <div class="text-center">
              <div class="form-group">
                <%= form_for resource, as: resource_name, url: session_path(resource_name),
                             html: { class: "form-horizontal col-xs-12 col-md-6 col-md-offset-3" } do |f| %>

                  <%- if devise_mapping.omniauthable? %>
                    <p class="text-center">
                      <%- resource_class.omniauth_providers.each do |provider| %>
                        <%= link_to fa_icon_tag("#{provider}-sign") + " Sign in with #{provider.to_s.titleize}",
                            omniauth_authorize_path(resource_name, provider),
                            class: 'btn btn-outline-primary' %>
                      <% end -%>
                    </p>
                  <% end -%>
                <% end %>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
